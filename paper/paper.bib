	issn = {10406182},
	issue = {February 2018},
	journaltitle = {Quaternary International},
	keywords = {Palaeoenvironmental reconstruction, Repeatability, Signal-to-noise ratio, {XRF} core scanning},
	note = {Publisher: Elsevier},
	pages = {44--54},
	title = {Signal-to-noise ratios, instrument parameters and repeatability of Itrax {XRF} core scan measurements of floodplain sediments},
