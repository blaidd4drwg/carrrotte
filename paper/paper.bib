	file = {PDF:/Users/roethlre/Zotero/storage/SIGX9WP4/Croudace et al._2019_Current perspectives on the capabilities of high resolution XRF core scanners(2).pdf:application/pdf},
	issn = {10406182},
	issue = {April},
	journaltitle = {Quaternary International},
	keywords = {High resolution analysis, Non-destructive analysis, Palaeoclimate, {XRF} core scanner, μ{XRF} analysis},
	note = {Publisher: Elsevier},
	pages = {5--15},
	title = {Current perspectives on the capabilities of high resolution {XRF} core scanners},
